{
	# startup
	hash cpu-governor &>/dev/null && cpu-governor performance
	[ -f ~/.unison/i14.prf ] && unison i14 -silent -repeat 10800 &> /dev/null &

	# ...wait for it...
	sleep 60
	while $(pgrep ssh-agent > /dev/null); do sleep 60; done

	# shutdown
	kill `pgrep -f 'unison i14'`
	unison i14 -silent
	hash cpu-governor &>/dev/null && cpu-governor ondemand
} &

gnome-settings-daemon &
pgrep xmobar &>/dev/null && trayer --edge top --align right --margin 1 --widthtype pixel --width 15 --height 14 --transparent true --tint 0x000000 &
pgrep xmobar trayer &>/dev/null && nm-applet &
( sleep 0.5; pgrep ibus-ui-gtk3 && killall ibus-ui-gtk3 ) &
#if ! gpg-agent 2>/dev/null; then gpg-agent --daemon --write-env-file ~/.gnupg/gpg-agent.info; fi
#. ~/.gnupg/gpg-agent.info; export GPG_AGENT_INFO
export `/usr/bin/gnome-keyring-daemon --start`
