{
	# startup
	[ -f ~/.unison/i14.prf ] && unison i14 -silent -repeat 10800 &> /dev/null &

	# ...wait for it...
	sleep 60
	while $(pgrep ssh-agent > /dev/null); do sleep 60; done

	# shutdown
	kill `pgrep -f 'unison i14'`
	unison i14 -silent
} &

gnome-settings-daemon &
export `/usr/bin/gnome-keyring-daemon --start`

pgrep xmobar &>/dev/null && which trayer &>/dev/null && trayer --edge top --align right --margin 1 --widthtype pixel --width 15 --height 14 --transparent true --tint 0x000000 &
pgrep trayer &>/dev/null && which nm-applet &>/dev/null && nm-applet &
( sleep 1; pgrep ibus-ui-gtk3 && killall ibus-ui-gtk3 ) &
