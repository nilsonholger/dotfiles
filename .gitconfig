[alias]
	a = add
	b = branch -vv
	ci = commit
	ca = commit --amend --no-edit
	co = checkout
	d = diff --color-words --unified=0
	devs = shortlog -nes
	di = diff --cached --color-words --unified=0
	dis = diff --cached --stat
	dir = rev-parse --show-toplevel
	ds = diff --stat
	l = log --graph --date-order
	la = log --graph --all --date-order
	lr = log --walk-reflogs
	ll = log --graph -n 1
	new = !git log --graph --date-order $(git rev-parse --abbrev-ref --symbolic-full-name '@{u}')..$(git rev-parse --abbrev-ref HEAD)
	ra = rebase --abort
	rc = rebase --continue
	re = rebase --edit-todo
	ri = rebase --interactive
	rs = rebase --skip
	s = status -s -b
	sub = submodule foreach git
	untracked = ls-files --others
	upstream = !git log --graph --date-order $(git rev-parse --abbrev-ref HEAD)..$(git rev-parse --abbrev-ref --symbolic-full-name '@{u}')

[color]
	branch = auto
	diff = auto
	interactive = auto
	pager = true
	status = auto
	ui = auto

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green bold
	changed = yellow bold

[core]
	pager = less -FRSX

[diff]
	algorithm = patience
	ignoreSubmodules = all
	renames = copy

[fetch]
	recurseSubmodules = false

[format]
	pretty = format:'%C(yellow)%h%Creset -%C(cyan)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset'

[help]
	autocorrect = 10

[log]
	abbrevCommit = true
	date = relative

[merge]
	ff = true
	log = true
	stat = true
	tool = vimdiff

[push]
	default = simple

[rebase]
	stat = true                # show nice diffstat
	autoSquash = true          # ... for fixup operations
	autoStash = true           # stash before starting
	missingCommitsCheck = warn # show warning when removing commit

[rerere]
	enabled = 1

[status]
	submodulesummary = true

