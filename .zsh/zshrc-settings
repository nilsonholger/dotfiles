# basics
autoload -Uz compinit
compinit
autoload -U colors
colors

$MBP && fpath=($fpath ~/.zsh/fpath)

HISTFILE=~/.histfile
SAVEHIST=32676
setopt histignorealldups
setopt histignorespace
setopt histnostore
setopt histreduceblanks
setopt histsavenodups
setopt histverify
setopt incappendhistory
setopt sharehistory

setopt autocd
setopt autopushd
setopt extendedglob
setopt pushdignoredups

setopt correct_all
setopt nobgnice
setopt notify
setopt prompt_subst
unsetopt beep

bindkey -v
bindkey "^r" history-incremental-search-backward
PERIOD=300

umask 077
